<resources>

    <style name="AppTheme" parent="Theme.Design.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/lightGray</item>
        <item name="android:fontFamily">@font/expletus_sans</item>
        <item name="android:textAppearance">@style/AppTextSmall</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTextSmall" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>
    <style name="AppTextMedium" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="AppTextLarge" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>


</resources>
